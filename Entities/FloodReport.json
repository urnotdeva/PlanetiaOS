{
  "name": "FloodReport",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string"
    },
    "image_url": {
      "type": "string"
    },
    "location": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        }
      }
    },
    "severity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ],
      "default": "medium"
    },
    "description": {
      "type": "string"
    },
    "date_reported": {
      "type": "string",
      "format": "date"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "source": {
      "type": "string",
      "enum": [
        "user",
        "news",
        "authority"
      ],
      "default": "user"
    }
  },
  "required": [
    "location",
    "severity"
  ]
}